generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Todo {
  id      Int     @id @default(autoincrement())
  status  Boolean
  text    String
  ownerId Int
  owner   User    @relation(fields: [ownerId], references: [id])
}

model User {
  id       Int      @id @default(autoincrement())
  password String   @unique
  salt     String   @unique
  username String   @unique
  session  Session?
  todos    Todo[]
}

model Session {
  id         Int      @id @default(autoincrement())
  created_at DateTime
  exprire_at DateTime
  value      String
  ownerId    Int      @unique
  owner      User     @relation(fields: [ownerId], references: [id])
}
