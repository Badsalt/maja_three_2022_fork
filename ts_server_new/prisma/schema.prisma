generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Todo {
  id      Int     @id @default(autoincrement())
  status  Boolean
  text    String
  owner   User    @relation(fields: [ownerId], references: [id])
  ownerId Int
}

model User {
  id       Int    @id @default(autoincrement())
  password String
  salt     String
  session  String
  todos    Todo[]
  username String
}
